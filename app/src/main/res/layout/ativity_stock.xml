<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stock_view_bg"
    android:orientation="vertical">


    <cn.com.jinrizhushi.stock.util.customstockview.StockView
        android:id="@+id/sv_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/stock_view_bg" />

    <cn.com.jinrizhushi.stock.util.customstockview.StockTimeSharingView
        android:id="@+id/sv_stock_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/stock_time_view_bg" />


</LinearLayout>